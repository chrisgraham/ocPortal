.standardbox_wrap_classic .news_piece_summary h3, .rss_summary h3 {
	margin-{!en_right}: 130px;
	border-bottom: 1px solid #6b81a1; /* {$,wizard, 100% medborder.border} */
}

.newscat_img_author, .newscat_img_member {
	padding: 7px 7px 7px 12px;
	float: {!en_right};
	width: 100px;
}

.newscat_img_author img, .newscat_img_member img {
	max-width: 100px;
}

.newscat_img_member {
	margin-top: 15px;
	text-align: center;
}

.newscat_img_author img {
	margin-top: 8px;
}

.newscat_img_author .news_by {
	margin-top: 5px;
	padding-bottom: 3px;
}

.newscat_img_member, .newscat_img_author .news_by {
	border: 1px dashed #8497b3; /* {$,wizard, 50% bordcolor + 50% W/B } */
	background-color: #d8dde6; /* {$,wizard, 95% bgcol + 5% !W/B} */
}

.news_summary_p {
	margin-top: 5px;
}

.news_goto {
	font-size: 0.85em;
	padding-bottom: 4px;
	margin-bottom: 30px;
}

.standardbox_wrap_classic .news_goto {
	text-align: center;
	border-bottom: 1px solid #c1cee3; /* {$,wizard, 100% lightborder} */
}

.standardbox_wrap_classic .news_goto a:link, .standardbox_wrap_classic .news_goto a:visited, .standardbox_wrap_classic .news_goto a:active {
	text-decoration: none;
}

.news_by {
	text-align: center;
}

.chicklet {
	padding-bottom: 5px;
}

.chicklets {
	float: {!en_right};
}

.chicklets_spacer {
	margin-{!en_right}: 120px;
}

